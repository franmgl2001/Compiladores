int arr[4];
int i;
int sum;

void main(void) {
    /* Initialize array elements */
    arr[0] = 10;
    arr[1] = 20;
    arr[2] = 30;
    arr[3] = 40;
    
    /* Calculate sum of array elements */
    sum = 0;
    i = 0;
    while (i < 4) {
        sum = sum + arr[i];
        i = i + 1;
        input(sum);
        output();
    }
    
    /* Output the sum */
    input(sum);
    output();
} 